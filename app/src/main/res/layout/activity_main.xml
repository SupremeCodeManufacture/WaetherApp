<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="view.activity.MainActivity">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin">

                    <ImageButton
                        android:id="@+id/btn_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:onClick="onClick"
                        android:src="@mipmap/ic_action_add" />

                    <TextView
                        android:id="@+id/tv_toolbar_place"
                        style="@style/ToolbarTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/btn_more"
                        android:layout_toEndOf="@+id/btn_add"
                        android:gravity="center_horizontal"
                        tools:text="Moskow" />

                    <ImageButton
                        android:id="@+id/btn_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:onClick="onClick"
                        android:src="@mipmap/ic_action_more_vert" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/material_24">

                    <TextView
                        android:id="@+id/tv_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textSize="68dp"
                        tools:text="23" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/tv_temp"
                        android:textColor="@color/primary_text"
                        android:textSize="32dp"
                        tools:text="°C" />

                    <TextView
                        android:id="@+id/tv_mood_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_temp"
                        android:textColor="@color/primary_text"
                        android:textSize="28dp"
                        android:textStyle="bold"

                        tools:text="Tuman" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="@dimen/material_half"
                    android:drawableEnd="@mipmap/ic_arrow_small"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/material_half"
                    android:text="@string/txt_detailed"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/txt_medium_xs" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/material_half"
                    android:background="@drawable/bg_rounded_semitransparent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_row_box"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin">

                        <TextView
                            android:id="@+id/tv_mood_today"
                            style="@style/TextBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/zone_mood_today"
                            tools:text="Today · Zaebisi" />

                        <LinearLayout
                            android:id="@+id/zone_mood_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_mmod_today"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="@dimen/material_half"
                                tools:src="@color/primary_dark" />

                            <TextView
                                android:id="@+id/tv_temp_min_today"
                                style="@style/TextBox"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                tools:text="-88" />

                            <TextView
                                style="@style/TextBox"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                tools:text="/" />

                            <TextView
                                android:id="@+id/tv_temp_max_today"
                                style="@style/TextBox"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                tools:text="-88°C" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/white_50" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_row_box"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin">

                        <TextView
                            android:id="@+id/tv_mood_tomorrow"
                            style="@style/TextBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/zone_mood_tomorrow"
                            tools:text="Today · Zaebisi" />

                        <LinearLayout
                            android:id="@+id/zone_mood_tomorrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_mmod_tomorrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="@dimen/material_half"
                                tools:src="@color/primary_dark" />

                            <TextView
                                android:id="@+id/tv_temp_min_tomorrow"
                                style="@style/TextBox"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                tools:text="-88" />

                            <TextView
                                style="@style/TextBox"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                tools:text="/" />

                            <TextView
                                android:id="@+id/tv_temp_max_tomorrow"
                                style="@style/TextBox"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                tools:text="-88°C" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/white_50" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_row_box"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin">

                        <TextView
                            android:id="@+id/tv_mood_aft_tomorrow"
                            style="@style/TextBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/zone_mood_aft_tomorrow"
                            tools:text="Today · Zaebisi" />

                        <LinearLayout
                            android:id="@+id/zone_mood_aft_tomorrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_mmod_aft_tomorrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="@dimen/material_half"
                                tools:src="@color/primary_dark" />

                            <TextView
                                android:id="@+id/tv_temp_min_aft_tomorrow"
                                style="@style/TextBox"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                tools:text="-88" />

                            <TextView
                                style="@style/TextBox"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                tools:text="/" />

                            <TextView
                                android:id="@+id/tv_temp_max_aft_tomorrow"
                                style="@style/TextBox"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                tools:text="-88°C" />

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_50" />

                    <TextView
                        android:id="@+id/tv_next_days"
                        style="@style/TextBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_row_box"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:text="@string/txt_next_days"
                        android:textSize="@dimen/txt_medium_xs" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/material_half"
                    android:layout_marginTop="@dimen/material_24"
                    android:background="@drawable/bg_rounded_semitransparent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_row_box_xs"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:text="@string/txt_details"
                        android:textSize="@dimen/txt_medium_xs"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_50" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_row_box"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/activity_horizontal_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextBoxCat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_wind" />

                                <TextView
                                    android:id="@+id/tv_wind"
                                    style="@style/TextBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="99 km/h" />

                            </LinearLayout>

                            <ImageView
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                                android:src="@mipmap/ic_wind"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <View
                                android:layout_alignParentEnd="true"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/white_50"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/activity_horizontal_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextBoxCat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_feels" />

                                <TextView
                                    android:id="@+id/tv_feels"
                                    style="@style/TextBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="-88°C" />

                            </LinearLayout>

                            <ImageView
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                                android:src="@mipmap/ic_thermometer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_50" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_row_box"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/activity_horizontal_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextBoxCat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_uv" />

                                <TextView
                                    android:id="@+id/tv_uv_index"
                                    style="@style/TextBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="88" />

                            </LinearLayout>

                            <ImageView
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                                android:src="@mipmap/ic_sun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <View
                                android:layout_alignParentEnd="true"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/white_50"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/activity_horizontal_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextBoxCat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_press" />

                                <TextView
                                    android:id="@+id/tv_pressure"
                                    style="@style/TextBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="1000,99 Mbar" />

                            </LinearLayout>

                            <ImageView
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                                android:src="@mipmap/ic_pressue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_50" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_row_box"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/activity_horizontal_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextBoxCat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_hum" />

                                <TextView
                                    android:id="@+id/tv_hum"
                                    style="@style/TextBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="88%" />

                            </LinearLayout>

                            <ImageView
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                                android:src="@mipmap/ic_humidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <View
                                android:layout_alignParentEnd="true"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/white_50"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/activity_horizontal_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextBoxCat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_vis" />

                                <TextView
                                    android:id="@+id/tv_visibility"
                                    style="@style/TextBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="34 km" />

                            </LinearLayout>

                            <ImageView
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                                android:src="@mipmap/ic_visibility"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>