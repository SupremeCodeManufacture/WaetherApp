<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_no_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_no_items"
                style="@style/TextBoxS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/txt_no_places"
                android:textColor="@color/secondary_text_normal" />

            <TextView
                android:id="@+id/tv_no_items_hint"
                style="@style/TextBoxSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_no_items"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/material_s_half"
                android:text="@string/txt_no_places_hint"
                android:textColor="@color/primary" />


        </RelativeLayout>

    </RelativeLayout>

</layout>