<resources>

    <style name="AppThemeDay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <style name="AppActionBarThemeDay" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <style name="AppThemeNight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryDark">@color/primary_dark_night</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/primary_dark_night</item>
    </style>

    <style name="AppActionBarThemeNight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryDark">@color/primary_dark_night</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/primary_dark_night</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="ToolbarTxt" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/txt_large</item>
    </style>

    <style name="TextViewSmall" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="TextViewXxLarge" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/txt_x_large</item>
    </style>

    <style name="TextBox" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/txt_medium</item>
    </style>

    <style name="TextBoxS" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/txt_medium_xs</item>
    </style>

    <style name="TextBoxTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/txt_medium_xs</item>
        <item name="android:textStyle">bold</item>
</style>

    <style name="TextBoxCat" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextBoxSmall" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

</resources>
